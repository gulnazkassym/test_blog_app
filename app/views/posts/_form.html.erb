<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Заголовок' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label 'Анонс' %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label 'Текст' %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.check_box :is_published, {}, true, false %>
    Опубликовать
  </div>

  <div class="actions">
    <%= form.submit 'Отправить' %>
  </div>
<% end %>
